#!/bin/sh

set -u
set -e

source "./.env"

# Output colors
NORMAL="\\033[0;39m"
BLUE="\\033[1;34m"

# Show a list of commands
help()
{
    echo "-----------------------------------------------------------------------"
    echo "Available commands                                                    -"
    echo "-----------------------------------------------------------------------"
    typeset -f | awk '/ \(\) $/ && !/^main / {print $1}'        
    echo "-----------------------------------------------------------------------"
}

# Show log message
log() {
    echo "${HOSTNAME} | $BLUE > $1 $NORMAL"
}

# Import additional shell scripts
if [ -d ./bin/custom ]; then
  for file in ./bin/custom/*.sh; do
    source "$file"
  done
fi

$*